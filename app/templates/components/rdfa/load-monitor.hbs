{{#if this.allBusy}}
  <div class="grid grid--collapse">
    <div class="col--2-12 u-align-center">
      <i class="fa fa-rotate-right fa-spin"></i>
    </div>
    <div class="col--10-12">
      <p class="small">
        Analysing new information... {{this.busyPluginsCount}}/{{this.pluginsCount}}
      </p>
    </div>
  </div>

{{else}}
  {{#if this.anyPluginBusy}}
    <div class="grid grid--collapse">
      <div class="col--2-12 u-align-center">
        <i class="fa fa-rotate-right fa-spin"></i>
      </div>
      <div class="col--10-12">
        <p class="small">
          Analysing new information... {{this.busyPluginsCount}}/{{this.pluginsCount}}
        </p>
      </div>
    </div>
  {{else if this.editorBusy}}
    <div class="grid grid--collapse">
      <div class="col--2-12 u-align-center">
        <i class="fa fa-rotate-right fa-spin"></i>
      </div>
      <div class="col--10-12">
        <p class="small">
          Loading
        </p>
      </div>
    </div>
  {{else}}
    <div class="grid grid--collapse">
      <div class="col--2-12 u-align-center">
      <i class="vi vi-check vi-u-s"></i>
      </div>
      <div class="col--10-12">
        <p class="small">
          Ready!
        </p>
      </div>
    </div>

  {{/if}}
{{/if}}
