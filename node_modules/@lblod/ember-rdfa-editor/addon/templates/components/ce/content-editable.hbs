{{#if this.yieldHTML}}
  {{{yield}}}
{{else}}
  {{yield}}
{{/if}}
&nbsp;

<!-- components -->
{{#each this.components as |config|}}
  <!-- component {{config.id}} -->
  {{log config}}
  <EmberWormhole @destinationElement={{config.element}}>
    <Ce::ComponentWrapper @id={{config.id}} @name={{config.name}} @content={{config.content}} @removeComponent={{action "removeComponent"}} />
  </EmberWormhole>
{{/each}}
